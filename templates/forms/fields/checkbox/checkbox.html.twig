{% set value = (value is null ? field.default : value) %}

<div class="form-field">
    <div class="col-sm-10">
        <div class="custom-control custom-checkbox">
        <!-- NOTE: to use Bootstraps default styling for checkbox, use - class="custom-control-input" for input -->
            <input type="checkbox" id="{{ field.name }}"
                   name="{{ (scope ~ field.name)|fieldName }}"
                        {% if value == true %} checked="checked" {% endif %}
                        {% if field.autofocus in ['on', 'true', 1] %}autofocus="autofocus"{% endif %}
                        {% if field.novalidate in ['on', 'true', 1] %}novalidate="novalidate"{% endif %}
                        {% if field.validate.required in ['on', 'true', 1] %}required="required"{% endif %}
            />
            <!-- To center the checkbox and text, use Bootstrap's   class="custom-control-label  on the label below (or roll your own) -->
            <label pl-3" for="{{ field.name }}">{{ field.label|e }} {{ field.validate.required in ['on', 'true', 1] ? '<span class="required">*</span>' }}</label>
        </div>
    </div>
</div>
